<p id="notice"><%= notice %></p>

<h1>Tareas por hacer este 18</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col">Photo</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%task.users.each do |user| %>
            <%= user.name %>
            
            <% end %> 
        </td>
        <td><%= image_tag task.photo, style:"width:60%", class:'img-fluid' %></td>
        <td><%= button_to 'Marcar como completada'%></td>
        <td><%= button_to 'Marcar como completada', task_todos_path(task) %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

